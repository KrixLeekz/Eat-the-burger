<h1 class="title text-center">Eat Ze Buga</h1>

<div class="container">
    <div class="row">
        <div class="col" id="list-burgers">
            <h2 class="burger-title text-center">Boogers Available</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="available-burgers">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn- btn-default">Devour it!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col">
            <img src="assets/img/burger.png" class="text-center" id="png">
        </div>

        <div class="col" id="list-devoured">
            <h2 class="burger-title text-center">Boogas Devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devoured-burgers">
                {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<form id="add-burger" action="/burgers" class="create-form" method="POST">
    <div class="form-group col-md-8">
        <input type="text" id="enter-burger" name="burger_name" class="form-control">
        <button type="submit" class="btn btn-default" id="submit-burger">Add a Burger</button>
    </div>
</form>